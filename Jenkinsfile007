pipeline{
    agent any
    environment{
        PATH="opt/maven/bin:$PATH"
    }
    stages{
        stage("git checkout"){
            steps{
                git 'https://github.com/Mahindranampally/myweb.git'
            }
        }
        stage("build"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("docker"){
            steps{
                sh "docker build -t mahindraid/mahiapp:0.0.1" .
            }
        
        }
    }
}
